<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/wallpaper5" >

    <com.wyx.setcpuui.CpuUsageView 
        android:id="@+id/view_cpuusage"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center" >
        <TextView 
            android:id="@+id/textview_freq"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="当前cpu频率:\n获取中……"/>
        <Button 
            android:id="@+id/button_startfloat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:background="@drawable/startwindow"
	        android:textSize="28sp"
	        android:textColor="#1196d1"
	        android:text="75%" />
        <TextView 
            android:id="@+id/textview_mode"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="当前模式:\n获取中……"/>
    </LinearLayout>
    <LinearLayout 
        android:background="#ffffffff"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal" >
        <include 
            layout="@layout/layout_button1" />
        <include 
            layout="@layout/layout_button2"/>
        <include 
            layout="@layout/layout_control1"/>
        
    </LinearLayout>
    <LinearLayout 
        android:background="#ffffffff"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal" >
    	<include 
    	    layout="@layout/layout_button3"/>
        <include 
            layout="@layout/layout_button4"/>
        <include 
            layout="@layout/layout_control2"/>
    </LinearLayout>

</LinearLayout>
